{
    "version": "2.0.0",
    "tasks": [
		{
			"type": "shell",
			"label": "makefile: make ALL",
			"command": "make",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"type":"shell",
			"label": "make clean",
			"command": "make clean",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}